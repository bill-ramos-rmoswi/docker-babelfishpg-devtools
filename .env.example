# Babelfish for PostgreSQL - Environment Configuration Template
# Copy this file to .env and customize the values for your environment
# 
# SECURITY NOTE: Never commit the .env file to version control!
# The .env file contains sensitive credentials and should remain local.

#===============================================================================
# DATABASE CONNECTION SETTINGS
#===============================================================================

# PostgreSQL connection settings (used by backup/restore scripts and container)
PGHOST=localhost
PGPORT=5432
PGDATABASE=babelfish_db

# Database superuser credentials 
# These credentials are used for:
# - Container initialization and database setup
# - Backup and restore operations  
# - Administrative tasks
PGUSER=babelfish_admin
PGPASSWORD=change_me_secure_password_123!

#===============================================================================
# CONTAINER INITIALIZATION SETTINGS  
#===============================================================================

# Admin user created during container initialization
# This becomes the main database superuser account
# Note: ADMIN_USERNAME should match PGUSER for consistency
ADMIN_USERNAME=babelfish_admin
ADMIN_PASSWORD=change_me_secure_password_123!

# Database name created during initialization
# Note: ADMIN_DATABASE should match PGDATABASE for consistency  
ADMIN_DATABASE=babelfish_db

# Babelfish migration mode (single-db or multi-db)
# multi-db: Supports multiple T-SQL databases (recommended)
# single-db: Single database mode for simple setups
MIGRATION_MODE=multi-db

#===============================================================================
# NETWORK SETTINGS
#===============================================================================

# Babelfish TDS port (SQL Server protocol)
# This is the port SQL Server tools connect to
BABELFISH_TDS_PORT=1433

#===============================================================================
# BACKUP CONFIGURATION
#===============================================================================

# Backup directory paths (usually set by docker-compose, but can override)
BBF_DOCKER_BACKUPS=/var/lib/babelfish/bbf_backups
BBF_WINDOWS_BACKUPS=/var/lib/babelfish/windows_backups
BBF_HOST_BACKUP_PATH=/mnt/c/Users/USER/bbf_backups

#===============================================================================
# RESTORE TARGET SETTINGS (for restore operations)
#===============================================================================

# Target host for restore operations (can be different from PGHOST)
# Used when restoring to a different server than the source
TARGET_PGHOST=localhost

#===============================================================================
# DEVELOPMENT/DEBUG SETTINGS
#===============================================================================

# Locale settings (usually C for consistent behavior)
LC_ALL=C
LANG=C  
LANGUAGE=C

# Enable verbose output for scripts (true/false)
VERBOSE_MODE=false

#===============================================================================
# USAGE EXAMPLES
#===============================================================================
#
# For local development (default):
#   PGUSER=babelfish_admin
#   PGPASSWORD=your_secure_dev_password
#   PGHOST=localhost
#
# For connecting to remote Babelfish:  
#   PGUSER=your_remote_user
#   PGPASSWORD=your_remote_password
#   PGHOST=your-babelfish-server.com
#   TARGET_PGHOST=your-babelfish-server.com
#
# For production use:
#   - Use strong, unique passwords (20+ characters)
#   - Consider using password managers or secret management systems
#   - Regularly rotate credentials
#   - Never share .env files or commit them to version control
#
#===============================================================================