{
  "name": "Babelfish DevTools",
  "dockerComposeFile": "docker-compose.yml",
  "service": "babelfish",
  "workspaceFolder": "/workspace",
  "forwardPorts": [3341, 2345, 2223],
  "postCreateCommand": "echo 'Welcome to Babelfish DevTools Container'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-mssql.mssql",
        "ms-ossdata.vscode-pgsql",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "ms-vscode.makefile-tools",
        "github.vscode-github-actions",
        "eamodio.gitlens"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "mssql.connections": [
          {
            "server": "localhost,1433",
            "database": "master",
            "authenticationType": "SqlLogin",
            "user": "${env:BABELFISH_USER}",
            "password": "${env:BABELFISH_PASSWORD}",
            "savePassword": false,
            "profileName": "Babelfish Local (Port 1433)"
          }
        ],
        "git.autofetch": true,
        "git.enableSmartCommit": true,
        "files.watcherExclude": {
          "**/target/**": true,
          "**/node_modules/**": true
        },
        "files.associations": {
          "*.sql": "sql",
          "*.pgsql": "pgsql"
        },
        "[sql]": {
          "editor.defaultFormatter": "ms-mssql.mssql"
        },
        "[pgsql]": {
          "editor.defaultFormatter": "ms-ossdata.vscode-pgsql"
        },
        "mssql.format.alignColumnDefinitionsInColumns": true,
        "mssql.format.datatypeCasing": "uppercase",
        "mssql.format.keywordCasing": "uppercase",
        "mssql.format.placeCommasBeforeNextStatement": false,
        "mssql.format.placeSelectStatementReferencesOnNewLine": false,
        "editor.fontSize": 14,
        "terminal.integrated.fontSize": 14,
        "debug.console.fontSize": 14,
        "markdown.preview.fontSize": 14
      }
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ]
}